<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginSIME.Views.LoginView"
             Title="Login">
    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            <Picker x:Name="tipoPerfilPicker"
                Title="ENTRAR COMO"
                Grid.Column="0"
                Grid.Row="0"
                SelectedIndex="{Binding IdTipoPerfil}">
                <Picker.Items>
                    <x:String>Escola</x:String>
                    <x:String>Administrador</x:String>
                    <x:String>Técnico</x:String>
                    <x:String>Funcionário</x:String>
                </Picker.Items>
            </Picker>
            <Entry Placeholder="CÓD. ETEC" Grid.Column="1" Grid.Row="1" Text="{Binding CodEscola}"></Entry>
        </Grid>
        <Entry Placeholder="RM" Text="{Binding Rm}"></Entry>
        <Entry Placeholder="SENHA" IsPassword="True" Text="{Binding Senha}"></Entry>
        <Button Text="ENTRAR" Command="{Binding LoginCommand}"></Button>
        <Label Text="Esqueci a senha" HorizontalOptions="Center"></Label>
    </VerticalStackLayout>
</ContentPage>